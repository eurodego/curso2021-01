<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Ticket">
                <field name="name" />
                <field name="date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
            <header>
                <!-- Asignar, En proceso,Pendiente, Finalizar, Cancelar-->
                <button string="Asignar" name="asignar" type="object" states="nuevo" />
                <button string="En Proceso" name="proceso" type="object" states="asignado" />
                <button string="Pendiente" name="pendiente" type="object" states="proceso,asignado" />
                <button string="Finalizar" name="resuelto" type="object" states="nuevo,asignado,proceso,pendiente" />
                <button string="Cancelar" name="cancelar" type="object"  attrs="{'invisible':[('state','!=', 'cancelado')]}"  />
                <field name="state" widget="statusbar" />
            </header>
                <sheet>
                    <div class="ae_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="main">
                        <group>
                            <field name="date" />
                            <field name="date_limit" />
                        </group>
                        <group>
                            <field name="assigned" />
                            <field name="time" />
                        </group>
                    </group>
                    <notebook>
                    <page string="Description">
                        <field name="description" />
                    </page>
                    <page string="Quality">
                        <label for="action_corrective" />
                        <field name="action_corrective" />
                        <group string="Preventive Action">
                            <field name="action_preventive" nolabel="1" />
                        </group>
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>